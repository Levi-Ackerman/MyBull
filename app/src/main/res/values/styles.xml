<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppMaterialTheme" parent="MaterialBaseTheme.Light">
        <item name="material_drawer_background">@color/default_white</item>
        <item name="colorPrimary">#ffffff</item>
        <item name="material_drawer_primary_text">@color/dark_black</item>
    </style>

    <style name="tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/t07</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">@color/uncheck_gray</item>
    </style>

</resources>
